<h1>Update Capstone Listing</h1>

<%= form_tag "/capstones/#{@capstone['id']}", method: :patch do %>
	<div>
	  <%= label_tag :name %>
	  <%= text_field_tag :name, @capstone["name"] %>
	</div>
	<div>
	  <%= label_tag :description %>
	  <%= text_field_tag :description, @capstone["description"] %>
	</div>
	<div>
	  <%= label_tag :url %>
	  <%= text_field_tag :url, @capstone["url"] %>
	</div>
	<div>
	  <%= label_tag :screenshot %>
	  <%= text_field_tag :screenshot, @capstone["screenshot"] %>
	</div>
	<br>
	<div>
	  <%= submit_tag 'Update' %>
	</div>
<% end %>